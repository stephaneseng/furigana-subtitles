{
    "manifest_version": 2,
    "name": "Furigana Subtitles",
    "version": "0.1.0",
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "furigana-subtitles.js"
            ],
            "css": [
                "furigana-subtitles.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "configurations/*.js"
    ]
}
